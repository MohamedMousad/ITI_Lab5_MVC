@model GetAllDepartmentVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Department</h1>

<form asp-action="Create" asp-controller="Department">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Enter Name">
        <span asp-validation-for="Name"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-danger mt-3">Cancel</a>
</form>